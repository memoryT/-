import time
import requests
from bs4 import BeautifulSoup  #解析html的套件
from selenium import webdriver
from selenium.webdriver.firefox.options import Options
from selenium.webdriver.common.by import By
import json

driver = webdriver.Firefox() #使用火狐瀏覽器 
my_options = Options() #用my_options 儲存對於瀏覽器的設定

url = "https://shopee.tw/buyer/login?next=https%3A%2F%2Fshopee.tw%2F"

driver.get(url)


driver.find_element(By.CSS_SELECTOR, "[name = loginKey]").send_keys("他媽的蝦皮")
driver.find_element(By.CSS_SELECTOR, "[name = password]").send_keys("有夠難搞")
time.sleep(1)
driver.find_elements(By.CSS_SELECTOR, "button")[2].click()

#每次登入都會觸發簡訊驗證，嘗試利用cookie登入
